<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Shell.TabBarIsVisible="false"
    Style="{DynamicResource backgroundStyle}"
    Title="UI Controls"
    x:Class="Xappy.ControlGallery.IndexPage">
    
    <ScrollView>
        <StackLayout
            Margin="15,30,0,0">
            <Label
                Style="{StaticResource TextTitle}"
                Text="Layouts" />
            <CollectionView
                Margin="-15,0,0,0"
                x:Name="LayoutsCV"
                ItemsSource="{Binding Layouts}"
                SelectedItem="{Binding SelectedControl, Mode=TwoWay}"
                SelectionMode="Single"
                SelectionChangedCommand="{Binding SelectCommand}"
                HeightRequest="200">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout
                        Span="2"
                        HorizontalItemSpacing="10"
                        VerticalItemSpacing="10"
                        Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                                WidthRequest="140"
                            HeightRequest="50"
                                Padding="8"
                                CornerRadius="3"
                                BackgroundColor="{StaticResource tomato}"
                                Visual="Material">
                            <Label
                                    InputTransparent="true"
                                    FontSize="14"
                                    TextColor="White"
                                    LineBreakMode="NoWrap"
                                    VerticalOptions="End"
                                    Text="{Binding Title}"
                                    d:Text="Something Else" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label
                Style="{StaticResource TextTitle}"
                Text="Pages" />
            <CollectionView
                x:Name="PagesCV"
                Margin="-15,0,0,0"
                ItemsSource="{Binding Pages}"
                SelectedItem="{Binding SelectedControl, Mode=TwoWay}"
                SelectionMode="Single"
                SelectionChangedCommand="{Binding SelectCommand}"
                HeightRequest="200">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout
                        Span="2"
                        VerticalItemSpacing="10"
                        HorizontalItemSpacing="10"
                        Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                                WidthRequest="140"
                            HeightRequest="50"
                            
                                Padding="8"
                                CornerRadius="3"
                                BackgroundColor="{StaticResource soft_blue}"
                                Visual="Material">
                            <Label
                                    InputTransparent="true"
                                    FontSize="14"
                                    TextColor="White"
                                    LineBreakMode="NoWrap"
                                    VerticalOptions="End"
                                    Text="{Binding Title}"
                                    d:Text="Something Else" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label
                Style="{StaticResource TextTitle}"
                Text="Views" />
            <CollectionView
                x:Name="ViewsCV"
                Margin="-15,0,0,0"
                ItemsSource="{Binding Views}"
                SelectedItem="{Binding SelectedControl, Mode=TwoWay}"
                SelectionMode="Single"
                SelectionChangedCommand="{Binding SelectCommand}"
                HeightRequest="200">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout
                        Span="2"
                        VerticalItemSpacing="10"
                        HorizontalItemSpacing="10"
                        Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                                WidthRequest="140"
                            HeightRequest="50"
                            
                                Padding="8"
                                CornerRadius="3"
                                BackgroundColor="{StaticResource brown_grey}"
                                Visual="Material">
                            <Label
                                    InputTransparent="true"
                                    FontSize="14"
                                    TextColor="White"
                                    LineBreakMode="NoWrap"
                                    VerticalOptions="End"
                                    Text="{Binding Title}"
                                    d:Text="Something Else" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>